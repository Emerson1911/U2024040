@model IEnumerable<U20240408.EntidadesDeNegocio.PersonaU>

@{
    ViewData["Title"] = "Index";
}

<h1>Inicio</h1>



 <form asp-action="Index">
    <div class="row">
        <div class="form-group col-md-5">
            <label class="control-label">Nombre</label>
            <input type="text" name="NombreU" class="form-control" />

        </div>
        <div class="form-group col-md-5">
            <label class="control-label">Apellido</label>
            <input type="text" name="ApellidoU" class="form-control" />

        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-12">
            <input type="submit" value="Buscar" class="btn btn-primary" />|
            <a class="btn btn-outline-primary" asp-action="Create">Crear Nueva persona</a>
        </div>
    </div>
</form>  


<table class="table">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.NombreU)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApellidoU)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNacimientoU)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SueldoU)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstatusU)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.NombreU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApellidoU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimientoU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SueldoU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstatusU)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
